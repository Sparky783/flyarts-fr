# Editor configuration, see https://editorconfig.org
root = true

# Règles générales
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Fichiers avec indentation par ESPACES (2)
[*.ts]
indent_style = space
indent_size = 2
quote_type = single
ij_typescript_use_double_quotes = false

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# Fichiers avec indentation par TABS (affichés comme 4 espaces)
[*.html]
indent_style = tab
tab_width = 4

[*.css]
indent_style = tab
tab_width = 4

[*.scss]
indent_style = tab
tab_width = 4

# Markdown : ne pas casser les listes
[*.md]
trim_trailing_whitespace = false
max_line_length = off
trim_trailing_whitespace = false